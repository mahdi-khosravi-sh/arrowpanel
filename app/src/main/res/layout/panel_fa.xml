            android:id="@+id/tv4"
            style="@style/ButtonStyle"
            android:text="بازکردن در ترمینال" />

        <View style="@style/LineStyle" />

        <TextView
            android:id="@+id/tv5"
            style="@style/ButtonStyle"
            android:text="تغیر پس زمینه" />

        <View style="@style/LineStyle" />

        <TextView
            android:id="@+id/tv6"
            style="@style/ButtonStyle"
            android:text="تنظیمات نمایشی" />

        <TextView
            android:id="@+id/tv9"
            style="@style/ButtonStyle"
            android:text="تنظیمات افزونه" />

        <TextView
            android:id="@+id/tv10"
            style="@style/ButtonStyle"
            android:text="دستگاه های متصل" />

        <View style="@style/LineStyle" />

        <TextView
            android:id="@+id/tv7"
            style="@style/ButtonStyle"
            android:text="تنظیمات" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
